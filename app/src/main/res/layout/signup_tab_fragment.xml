<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/tw_cen_bold"
            android:gravity="center"
            android:text="Welcome Onboard!"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edtTxtName"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/edt_txt_dg"
            android:hint="Enter your full name"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="@+id/txtWelcome"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="@+id/txtWelcome"
            app:layout_constraintTop_toBottomOf="@+id/txtWelcome"
            app:layout_constraintWidth_percent=".8" />

        <EditText
            android:id="@+id/edtTxtEmail"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/edt_txt_dg"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="@+id/edtTxtName"
            app:layout_constraintStart_toStartOf="@+id/edtTxtName"
            app:layout_constraintTop_toBottomOf="@+id/edtTxtName"
            app:layout_constraintWidth_percent=".8" />

        <EditText
            android:id="@+id/edtTxtPassword"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/edt_txt_dg"
            android:hint="Enter password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="@+id/edtTxtEmail"
            app:layout_constraintStart_toStartOf="@+id/edtTxtEmail"
            app:layout_constraintTop_toBottomOf="@+id/edtTxtEmail"
            app:layout_constraintWidth_percent=".8" />

        <EditText
            android:id="@+id/edtTxtConfirmPass"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/edt_txt_dg"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="@+id/edtTxtPassword"
            app:layout_constraintStart_toStartOf="@+id/edtTxtPassword"
            app:layout_constraintTop_toBottomOf="@+id/edtTxtPassword"
            app:layout_constraintWidth_percent=".8" />

        <ImageView
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="@+id/edtTxtConfirmPass"
            app:layout_constraintStart_toStartOf="@+id/edtTxtConfirmPass"
            app:layout_constraintTop_toBottomOf="@+id/edtTxtConfirmPass"
            app:srcCompat="@drawable/btn_register" />

        <TextView
            android:id="@+id/txt_acc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/tw_cen_regular"
            android:layout_marginTop="50dp"
            android:text="Already have an account?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/edtTxtConfirmPass"
            app:layout_constraintTop_toBottomOf="@+id/btnRegister"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/txt_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tw_cen_bold"
            android:text="Sign In"
            android:layout_marginTop="50dp"
            android:textColor="@color/green2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/edtTxtConfirmPass"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintStart_toEndOf="@+id/txt_acc2"
            app:layout_constraintTop_toBottomOf="@+id/btnRegister"
            app:layout_constraintVertical_bias="0.511" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>