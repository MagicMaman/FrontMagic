<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/tw_cen_bold"
            android:gravity="center"
            android:text="Welcome Onboard!"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edtTxtName"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_txt_dg"
            android:hint="Enter your full name"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="@+id/txtWelcome"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="@+id/txtWelcome"
            app:layout_constraintTop_toBottomOf="@+id/txtWelcome"
            app:layout_constraintWidth_percent=".8" />

        <EditText
            android:id="@+id/edtTxtEmail"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_txt_dg"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="@+id/edtTxtName"
            app:layout_constraintStart_toStartOf="@+id/edtTxtName"
            app:layout_constraintTop_toBottomOf="@+id/edtTxtName"
            app:layout_constraintWidth_percent=".8" />

        <EditText
            android:id="@+id/edtTxtPassword"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_txt_dg"
            android:hint="Enter password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="@+id/edtTxtEmail"
            app:layout_constraintStart_toStartOf="@+id/edtTxtEmail"
            app:layout_constraintTop_toBottomOf="@+id/edtTxtEmail"
            app:layout_constraintWidth_percent=".8" />

        <EditText
            android:id="@+id/edtTxtConfirmPass"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_txt_dg"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="@+id/edtTxtPassword"
            app:layout_constraintStart_toStartOf="@+id/edtTxtPassword"
            app:layout_constraintTop_toBottomOf="@+id/edtTxtPassword"
            app:layout_constraintWidth_percent=".8" />
        <TextView
            android:id="@+id/txtLienBebe"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/tw_cen_bold"
            android:text="Votre lien avec bébé"
            android:textColor="@color/green2"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtTxtConfirmPass" />

        <TextView
            android:id="@+id/txtPrenomBebe"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/tw_cen_bold"
            android:text="Prénom du bébé"
            android:textColor="@color/green2"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerLien" />

        <EditText
            android:id="@+id/edtTxtPrenom"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_txt_dg"
            android:backgroundTint="@color/green"
            android:minHeight="48dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPrenomBebe"
            app:layout_constraintWidth_percent=".8"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/txtAnnivBebe"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/tw_cen_bold"
            android:text="Anniversaire de bébé"
            android:textColor="@color/green2"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtTxtPrenom" />

        <EditText
            android:id="@+id/edtTxtAnniv"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_txt_dg"
            android:backgroundTint="@color/green"
            android:inputType="date"
            android:minHeight="48dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="jj/mm/aaaa"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAnnivBebe"
            app:layout_constraintWidth_percent=".8"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/txtGenderBebe"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/tw_cen_bold"
            android:text="Gender"
            android:textColor="@color/green2"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtTxtAnniv" />

        <Spinner
            android:id="@+id/spinnerLien"
            android:layout_width="329dp"
            android:layout_height="41dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtLienBebe"
            app:layout_constraintWidth_percent=".8"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtGenderBebe">

            <RadioButton
                android:id="@+id/radBtnG"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:elevation="0.5dp"
                android:background="@drawable/radio_selector"
                android:button="@drawable/null_radio_button"
                android:gravity="center"
                android:text="Garçon"
                android:textColor="@drawable/radio_text_selector"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="499dp" />

            <RadioButton
                android:id="@+id/radBtnF"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:elevation="0.5dp"
                android:background="@drawable/radio_selector"
                android:button="@drawable/null_radio_button"
                android:gravity="center"
                android:text="Fille"
                android:textColor="@drawable/radio_text_selector"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="499dp" />
        </RadioGroup>
        <ImageView
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/radioGroup2"
            app:layout_constraintStart_toStartOf="@+id/radioGroup2"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup2"
            app:srcCompat="@drawable/btn_register" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>